#include <iostream>
#include <cstdlib>
#include "header.hpp"

using namespace std;


Ball::Ball(int L){	// constructor tis ball
	durability = L;	// arxikopoiei to durability, opws auto dinetai apo ti grammh entolwn
	state = OK;	// kai kanei to state OK, gt kathe mpala arxika einai "kalh"
}
	
Ball::~Ball(){}		//	 destructor tis ball: de thelw na kanei tipota, afou den exw desmeusei dunamika kati ston constructor

void Ball::hit(){}	// oi hit kai oi rest tis ball de thelw na kanoun tipota afou einai virtual 
void Ball::rest(){}	// kai tha kalountai oi antistoixes kathe typou
State Ball::get_state(){
	return state;		// gurizei tin katastasi kathe mpalas
}	
Type Ball::get_type(){}		// virtual: tha klithei i antistoixh kathe typou mpalas
